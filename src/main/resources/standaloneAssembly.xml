<assembly>
  <id>standalone</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>

  <dependencySets>
    <dependencySet>
      <scope>runtime</scope><!-- runtime excludes provided jars -->
      <outputDirectory>${project.artifactId}/lib</outputDirectory>
      <useTransitiveDependencies>true</useTransitiveDependencies>
      <unpack>false</unpack>
    </dependencySet>
  </dependencySets>

  <fileSets>
    <fileSet>
      <!-- bundle filtered recources-->
      <directory>${basedir}/target/classes</directory>
      <outputDirectory>${project.artifactId}</outputDirectory>
      <includes>
        <include>**/*.bat</include>
        <include>**/*.sh</include>
        <include>**/*.txt</include>
      </includes>
      <fileMode>750</fileMode>
    </fileSet>
    <fileSet>
      <directory>${basedir}/target/classes</directory>
      <outputDirectory>${project.artifactId}/lib</outputDirectory>
      <includes>
        <include>broker.properties</include>
      </includes>
      <fileMode>750</fileMode>
    </fileSet>
  </fileSets>

</assembly>